# Environment Variables voor BitBeheer
# Kopieer dit bestand naar .env en vul de juiste waarden in

# Admin en Test Wachtwoorden
REACT_APP_ADMIN_PASSWORD=your_secure_admin_password_here
REACT_APP_TEST_PASSWORD=your_secure_test_password_here

# Supabase Database Configuration
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database URL (voor serverless functions)
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# E-mail Configuratie
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# TransIP E-mail (alternatief)
TRANSIP_EMAIL=your_email@transip.nl
TRANSIP_PASSWORD=your_transip_password

# JWT Secret (voor productie)
JWT_SECRET=your_jwt_secret_here
